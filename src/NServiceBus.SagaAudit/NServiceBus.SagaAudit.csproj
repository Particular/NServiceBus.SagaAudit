  <ItemGroup>
    <PackageReference Include="NServiceBus" Version="[8.0.0-alpha.631, 9.0.0)" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Particular.Packaging" Version="0.9.0" PrivateAssets="All" />
  </ItemGroup>

</Project>